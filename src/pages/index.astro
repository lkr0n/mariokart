---
import Layout from '../layouts/Layout.astro';
import ImageCard from '../components/ImageCard.astro'
import Track from '../components/Track.astro'
import { website_title, chooseRandomElement, cups, drivers, vehicles, tires, gliders } from '../globals.ts';

const cup = chooseRandomElement(cups);
const track = chooseRandomElement(cup.tracks)
const driver = chooseRandomElement(drivers);
const vehicle = chooseRandomElement(vehicles);
const tire = chooseRandomElement(tires);
const glider = chooseRandomElement(gliders);
---

<Layout title={website_title}>
	<main>
		<h1>{website_title}</h1>
		<p>Roll a random track, driver and vehicle configuration by refreshing the page.<br> Try something new today!</p>
		<hr>
		<Track cup = {cup} track = {track} />
		<hr>
		<ImageCard body={driver.name} image_path={"drivers/" + driver.filename} />	
		<ImageCard body={vehicle.name} image_path={"vehicles/" + vehicle.filename} />				
		<ImageCard body={tire.name} image_path={"tires/" + tire.filename} />				
		<ImageCard body={glider.name} image_path={"gliders/" + glider.filename} />
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: black;
		font-size: 20px;
		line-height: 1.6;
		position: relative;
		background-color: rgba(255, 255, 255, 0.7)
	}

	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
	}
	p {
		text-align: center;
		opacity: 0.5;
	}
</style>
